programa {
  funcao inicio() {
    inteiro base
    inteiro altura
    inteiro area
    escreva("Digite o número da base: ")
    leia(base)
    escreva("Digite o número da altura: ")
    leia(altura)
    area = base * altura
    escreva("A base é : " + base + "\n" + "A altura é :" + altura  + "\n" +"Então a área é :" + area )
  }
}
